{
  "name": "orbjs",
  "description": "orb offers a few simple methods for several common problems of orbital mechanics",
  "keywords": [
    "orbit",
    "orbital mechanics",
    "orbit determination"
  ],
  "author": "Ben Elsen <mail@benelsen.com> (https://benelsen.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benelsen/orb.git"
  },
  "main": "dist/orb.min.js",
  "jsnext:main": "dist/orb.module.js",
  "browser": "dist/orb.min.js",
  "scripts": {
    "docs": "documentation build ./lib --name orbjs -f html -o docs -c documentation.yml",
    "lint": "standard",
    "build": "rollup -c rollup.config.js && uglifyjs dist/orb.js -c -m -o dist/orb.min.js",
    "pretest": "npm run lint && npm run build",
    "test": "babel-node node_modules/.bin/lab -l test/",
    "version": "npm run test && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "core-js": "^2.4.0",
    "leapseconds": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-exponentiation-operator": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "code": "^3.0.1",
    "documentation": "^4.0.0-beta5",
    "ghooks": "^1.2.4",
    "lab": "^10.7.1",
    "rollup": "^0.29.0",
    "rollup-plugin-babel": "^2.5.1",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0",
    "standard": "^7.1.2",
    "uglify-js": "^2.6.2",
    "validate-commit-msg": "^2.6.1",
    "semantic-release": "^4.3.5"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "docs/"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-exponentiation-operator"
    ]
  },
  "ghooks": {
    "commit-msg": "validate-commit-msg",
    "pre-push": "npm test"
  },
  "config": {
    "validate-commit-msg": {
      "types": ["feature", "fix", "docs", "style", "refactor", "performance", "test", "chore", "revert", "infra"]
    }
  },
  "release": {
    "branch": "v1"
  },
  "publishConfig": {
    "tag": "next"
  }
}
